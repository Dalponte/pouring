    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Backend Tests",
            "program": "${workspaceFolder}/apps/backend/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--watchAll=false",
                "${relativeFile}"
            ],
            "cwd": "${workspaceFolder}/apps/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Backend e2e tests",
            "program": "${workspaceFolder}/apps/backend/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--watchAll=false",
                "--config",
                "${workspaceFolder}/apps/backend/test/jest-e2e.json",
                "${relativeFile}"
            ],
            "cwd": "${workspaceFolder}/apps/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}